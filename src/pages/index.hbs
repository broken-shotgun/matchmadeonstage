<!DOCTYPE html>
<html lang="en">
  <head>
    
    <!-- 
      This is the main Handlebars template for the site 
      - When the user visits the homepage or submits a color the app calls the endpoints in server.js
      - The server script passes data in here and the Handlebars code builds it into the HTML page
    -->
    
    <meta charset="utf-8" />
    <link rel="icon" href="https://glitch.com/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{{seo.title}}</title>
    
    <!-- Meta tags for SEO and social sharing -->
    <link rel="canonical" href="{{seo.url}}">
    <meta name="description" content="{{seo.description}}">
    <meta property="og:title" content="{{seo.title}}">
    <meta property="og:type" content="article">
    <meta property="og:url" content="{{seo.url}}">
    <meta property="og:description" content="{{seo.description}}">
    <meta property="og:image" content="{{seo.image}}">
    <meta name="twitter:card" content="summary">

    <!-- Import the webpage's stylesheet -->
    <link rel="stylesheet" href="/style.css" />
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io();
      
      
        $(document).ready(function(){
          $('#VoteHot').click(function(){
            socket.emit('vote', 'hot');
          });
          
          $('#VoteCold').click(function(){
            socket.emit('vote', 'cold');
          });
          
          $('#VoteResults').text('0');
          
          socket.on("update", (...args) => {
            console.log('update', args);
            $('#VoteResults').text('0');
          });
        });

    </script>
    
  </head>
  <body>
    <div class="wrapper">
      <div class="content" role="main">
        <h1 class="title">Match Made on Stage</h1>
        
        <div class="vote-form">
          <p>
            How is the date going?
          </p>
          <button class="hot" id="VoteHot">HOT</button>
          <button class="not" id="VoteCold">COLD</button>
        </div>
        
        <div class="vote-results">
          <p>
            Results
          </p>
          <p id="VoteResults">
          </p>
        </div>
        
      </div>
    </div>
    <footer class="footer">
      <div class="links">
        <a href="https://www.matchmadeonstage.com/">Website</a> â—† 
        <a href="https://www.instagram.com/matchmadeonstage/">Instagram</a>
      </div>
    </footer>
  </body>
</html>
